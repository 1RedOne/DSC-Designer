<Window x:Class="WpfApplication1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="Window3" Height="300" Width="300">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" MaxWidth="240" Name="ww"/>
                        <ColumnDefinition Width="2*"  />
                    </Grid.ColumnDefinitions>
                    <StackPanel Name="LeftStack" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.Column="1">
                        <TextBox />
                    </StackPanel>
                    <StackPanel Name="RightStack" HorizontalAlignment="Left" VerticalAlignment="Top"  Grid.Column="2"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
